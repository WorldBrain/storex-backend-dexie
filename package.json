  "devDependencies": {
    "@types/chai": "^4.0.6",
    "@types/events": "^1.2.0",
    "@types/mocha": "^2.2.44",
    "@types/node": "^10.9.4",
    "chai": "^4.1.2",
    "expect": "^23.5.0",
    "fake-indexeddb": "^2.0.4",
    "mocha": "^4.0.1",
    "sinon": "^4.1.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.1"
  }
